@model ProgramasMobilidadeESW2017.Models.ProgramaMobilidade

@{
    ViewData["Title"] = "Edit";
}

<br />
<h4>Realize as alterações ao programa de mobilidade no formulário abaixo</h4>
<hr />

<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            @*<div class="form-group">
            <label asp-for="TipoProgramaMobilidadeID" class="control-label"></label>
            <select asp-for="TipoProgramaMobilidadeID" class="form-control" asp-items="ViewBag.TipoProgramaMobilidadeID"></select>
            <span asp-validation-for="TipoProgramaMobilidadeID" class="text-danger"></span>
        </div>*@
            <div class="form-group">
                <label asp-for="TipoProgramaMobilidade" class="control-label"></label>
                <select asp-for="TipoProgramaMobilidadeID" class="form-control" asp-items="ViewBag.TipoProgramaID">
                    <option value="">-- Selecione o Tipo de Programa --</option>
                </select>
                <span asp-validation-for="TipoProgramaMobilidadeID" class="text-danger" />
            </div>
            <div class="form-group">
                <label asp-for="Duracao" class="control-label"></label>
                <input asp-for="Duracao" class="form-control" />
                <span asp-validation-for="Duracao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataInicioInscricao" class="control-label"></label>
                <input asp-for="DataInicioInscricao" class="form-control" />
                <span asp-validation-for="DataInicioInscricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataLimiteInscricao" class="control-label"></label>
                <input asp-for="DataLimiteInscricao" class="form-control" />
                <span asp-validation-for="DataLimiteInscricao" class="text-danger"></span>
            </div>
            <br />
            <div class="form-group">
                <a asp-action="Index" class="btn btn-sm btn-success">Voltar</a>
                <input type="submit" value="Gravar Alterações" class="btn btn-sm btn-primary" />
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
