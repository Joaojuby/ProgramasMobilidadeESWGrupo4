@model ProgramasMobilidadeESW2017.Models.Candidatura

@{
    ViewData["Title"] = "Detalhes";
}

<div>
    <h3>Dados da Candidatura</h3>
    <br />
    <div class="row">
        @Html.LabelFor(model => model.ProgramaMobilidade, new { @class = "col-sm-3 col-form-label" })
        <span class="col-sm-9">
            @Html.DisplayTextFor(model => model.ProgramaMobilidade.Nome)
        </span>
    </div>
    <div class="row">
        @Html.LabelFor(model => model.EstadoCandidatura, new { @class = "col-sm-3 col-form-label" })
        <span class="col-sm-9">
            @Html.DisplayTextFor(model => model.EstadoCandidatura.Designacao)
        </span>
    </div>
    <br />
    <h4 style="text-decoration: underline">Candidato</h4>
    <div class="row">
        @Html.LabelFor(model => model.User.PrimeiroNome, new { @class = "col-sm-3 col-form-label" })
        <span class="col-sm-9">
            @Html.DisplayTextFor(model => model.User.PrimeiroNome)
        </span>
    </div>
    <div class="row">
        @Html.LabelFor(model => model.User.UltimoNome, new { @class = "col-sm-3 col-form-label" })
        <span class="col-sm-9">
            @Html.DisplayTextFor(model => model.User.UltimoNome)
        </span>
    </div>
    <div class="row">
        @Html.LabelFor(model => model.User.Nacionalidade, new { @class = "col-sm-3 col-form-label" })
        <span class="col-sm-9">
            @Html.DisplayTextFor(model => model.User.Nacionalidade)
        </span>
    </div>
    <div class="row">
        @Html.LabelFor(model => model.User.DataNascimento, new { @class = "col-sm-3 col-form-label" })
        <span class="col-sm-9">
            @Html.DisplayFor(model => model.User.DataNascimento)
        </span>
    </div>
    <div class="row">
        @Html.LabelFor(model => model.User.Email, new { @class = "col-sm-3 col-form-label" })
        <span class="col-sm-9">
            @Html.DisplayTextFor(model => model.User.Email)
        </span>
    </div>
    <br />
    <h4 style="text-decoration: underline">Contactos</h4>
    <div class="row">
        @Html.LabelFor(model => model.NomePessoaContacto, new { @class = "col-sm-3 col-form-label" })
        <span class="col-sm-9">
            @Html.DisplayTextFor(model => model.NomePessoaContacto)
        </span>
    </div>
    <div class="row">
        @Html.LabelFor(model => model.TelefonePessoaContacto, new { @class = "col-sm-3 col-form-label" })
        <span class="col-sm-9">
            @Html.DisplayTextFor(model => model.TelefonePessoaContacto)
        </span>
    </div>
    <div class="row">
        @Html.LabelFor(model => model.RelacaoComCandidato, new { @class = "col-sm-3 col-form-label" })
        <span class="col-sm-9">
            @Html.DisplayTextFor(model => model.RelacaoComCandidato)
        </span>
    </div>
</div>

